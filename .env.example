# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_user
DB_PASSWORD=your_password
DB_NAME=ecom_products

# Shopify Configuration
SHOPIFY_SHOP_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_...
SHOPIFY_API_VERSION=2025-07

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# LangSmith Configuration (REQUIRED for debugging)
LANGSMITH_API_KEY=lsv2_pt_...  # Your LangSmith API key
LANGSMITH_PROJECT=ecom-product-agent  # Project name in LangSmith
LANGSMITH_TRACING=true  # Enable tracing
LANGCHAIN_TRACING_V2=true  # Alternative env var
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=ecom-product-agent  # Alternative project name

# Agent Configuration
AGENT_MAX_ITERATIONS=10
MAX_SEARCH_RESULTS=20
SESSION_TTL_SECONDS=3600
MAX_CONVERSATION_HISTORY=20
MAX_SQL_RESULTS=100

# Debugging Configuration
DEBUG_MODE=true
LOG_LEVEL=DEBUG
LANGSMITH_RUN_NAME_PREFIX=ecom_  # Prefix for run names